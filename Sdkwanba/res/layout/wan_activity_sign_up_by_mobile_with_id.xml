<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_by_mobile_with_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.yiqiwanba.wansdk.user.SignUpByMobileWithIDActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:background="@drawable/wan_dialog_bg"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/wan_btn_back_00" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:text="手机号注册"
                android:textAlignment="center"
                android:textColor="@color/wan_main"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mobileEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/wan_edit_text_bg_00"
                android:drawableLeft="@drawable/wan_icon_head"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/wan_steel"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/realNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/wan_edit_text_bg_00"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="请输入真实姓名"
                android:textColor="@color/wan_steel"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/verificationCodeEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/wan_edit_text_bg_00"
                    android:ems="6"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="@color/wan_steel"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/verificationCodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/wan_button_bg_00"
                    android:text="获取验证码"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/idNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/wan_edit_text_bg_00"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="请输入身份证号"
                android:textColor="@color/wan_steel"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/wan_edit_text_bg_00"
                android:drawableLeft="@drawable/wan_icon_lock"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/wan_steel"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="268dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/wan_button_bg_00"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册即表示同意"
                android:textColor="@color/wan_jumbo"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/userTermsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="《一起玩吧用户协议》"
                android:textColor="@color/wan_dodger_blue"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
