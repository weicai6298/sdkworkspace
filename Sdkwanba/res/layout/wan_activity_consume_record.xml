<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wan_activity_set_mobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wan_background"
    tools:context="com.yiqiwanba.wansdk.mine.ConsumeRecordActivity">

    <RelativeLayout
        android:id="@+id/topRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:src="@drawable/wan_btn_back_01" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消费记录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topRelativeLayout"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/wan_round_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="日期"
                android:textAlignment="center"
                android:textColor="@color/wan_text_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view9"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/wan_alto" />

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:text="消费金额"
                android:textAlignment="center"
                android:textColor="@color/wan_text_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view10"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/wan_alto" />

            <TextView
                android:id="@+id/gameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="sans-serif-medium"
                android:text="游戏"
                android:textAlignment="center"
                android:textColor="@color/wan_text_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view11"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/wan_alto" />

            <TextView
                android:id="@+id/goodsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="商品"
                android:textAlignment="center"
                android:textColor="@color/wan_text_black"
                android:textSize="14sp" />

            <View
                android:id="@+id/view12"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/wan_alto" />

            <TextView
                android:id="@+id/payMethodTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:text="支付方式"
                android:textAlignment="center"
                android:textColor="@color/wan_text_black"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view13"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/wan_alto" />

        <in.srain.cube.views.ptr.PtrFrameLayout
            android:id="@+id/ptr_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </in.srain.cube.views.ptr.PtrFrameLayout>

    </LinearLayout>

</RelativeLayout>
