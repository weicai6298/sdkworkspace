<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.yiqiwanba.wansdk.user.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/wan_dialog_bg"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/wan_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/wan_edit_text_bg_00"
            android:drawableLeft="@drawable/wan_icon_head"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="请输入手机号码 / 账号"
            android:inputType="textPersonName"
            android:textColor="@color/wan_steel"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wan_edit_text_bg_00"
            android:drawableLeft="@drawable/wan_icon_lock"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/wan_steel"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ForgetPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="忘记密码"
            android:textColor="#666666"
            android:textSize="13sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/wan_button_bg_00"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/touristButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:text="游客登录"
                android:textColor="@color/wan_jumbo"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:background="@color/wan_alto"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/SignUpByMobileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:text="手机号注册"
                android:textColor="@color/wan_jumbo"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:background="@color/wan_alto"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/SignUpByUsernameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:text="账号注册"
                android:textAlignment="center"
                android:textColor="@color/wan_jumbo"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
