<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yiqiwanba.wansdk.mine.MineActivity"
    android:background="@color/wan_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:id="@+id/topRelativeLayout"
        android:layout_height="40dp"
        android:background="@android:color/black">

        <ImageButton
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/closeButton"
            android:background="@null"
            android:src="@drawable/wan_btn_close"
            android:layout_width="40dp" />

        <TextView
            android:text="个人中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topRelativeLayout"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/adImageView"
                android:layout_marginBottom="8dp"
                android:background="@drawable/wan_round_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/wan_icon_headhoder" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="账号：ghhhhh    ID：654861"
                    android:textColor="@color/wan_text_black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/coinLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:src="@drawable/wan_icon_coin_bag" />

                    <TextView
                        android:id="@+id/balanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/coinLinearLayout"
                        android:layout_weight="1"
                        android:text="850"
                        android:textColor="@color/wan_crayon_orange"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:text="  玩币"
                        android:textColor="@color/wan_jumbo"
                        android:textSize="10sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="110dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/wan_button_bg_05"
                    android:text="退出登录"
                    android:textColor="#999999"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/adImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wan_ad_image_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/wan_ad_placeholder" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/wan_round_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/mySubAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_sub_account" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="我的小号"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:id="@+id/myWanCoinCardButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_my_wan_coin_card" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="我的玩币卡"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:id="@+id/consumeRecordButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_consume_record" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="消费记录"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:id="@+id/setMobileButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_set_mobile" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="绑定手机号"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/wan_alto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/setPasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_set_password" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="修改密码"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:id="@+id/identityButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_id" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="实名认证"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:id="@+id/contactButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:scaleType="center"
                        android:src="@drawable/wan_icon_contact" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="联系方式"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view8"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/wan_alto" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/autoLoginSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:switchMinWidth="60dp"
                        android:textOff=" "
                        android:textOn=" "
                        android:thumb="@drawable/wan_switch_thumb"
                        android:track="@drawable/wan_switch_track_selector" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="自动登录"
                        android:textColor="@color/wan_text_black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
