<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/xmw_corner_login_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_regist_phone_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/xmw_corner_title" >

            <LinearLayout
                android:id="@+id/back_page_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xmw_ic_back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/xmw_c_regist_02"
                android:textColor="@color/appBlack"
                android:textSize="@dimen/xmw_c_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <com.xmwsdk.view.XmwEditText
                android:id="@+id/rephone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/xmw_corner_white_gray"
                android:hint="@string/xmw_phonenumber"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="@color/appBlack"
                android:textColorHint="@color/appDarkGrey"
                android:textSize="@dimen/xmw_c_content" />

            <LinearLayout
                android:id="@+id/rl_getcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/xmw_corner_white_gray"
                    android:paddingRight="10dp" >

                    <com.xmwsdk.view.XmwEditText
                        android:id="@+id/rephone_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/xmw_inputverify"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="7dp"
                        android:textColor="@color/appBlack"
                        android:textColorHint="@color/appDarkGrey"
                        android:textSize="@dimen/xmw_c_content" />
                </RelativeLayout>

                <Button
                    android:id="@+id/rephone_send"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:background="@drawable/xmw_corner_blue"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/appWhite"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.xmwsdk.view.XmwEditText
                android:id="@+id/rephone_pw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/xmw_corner_white_gray"
                android:hint="@string/xmw_regist_pwd"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:textColor="@color/appBlack"
                android:textColorHint="@color/appDarkGrey"
                android:textSize="@dimen/xmw_c_content" />
        </LinearLayout>

        <Button
            android:id="@+id/rephone_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/xmw_light_button"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/appBlack"
            android:textSize="@dimen/xmw_c_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xmw_c_regist_03"
                android:textColor="@color/xmw_c_textcolor_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_agreement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xmw_c_regist_04"
                android:textColor="@color/xmw_text_blue"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/xmw_common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/xmw_exit_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/register_phone_bottom_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/xmw_login_icon_user"
                    android:gravity="center_horizontal"
                    android:text="用户名注册"
                    android:textColor="@color/xmw_c_textcolor_gray"
                    android:textSize="11dp" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="@color/xmw_divider" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/register_phone_bottom_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/xmw_ic_accountlogin"
                    android:gravity="center_horizontal"
                    android:text="账号登录"
                    android:textColor="@color/xmw_c_textcolor_gray"
                    android:textSize="11dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>