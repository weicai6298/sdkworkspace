<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00ffffff" >

    <RelativeLayout
        android:id="@+id/xmw_xmt_msg"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/xmw_c_rect_banyuan"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xmw_xmt_title1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/xmw_xmt1"
                android:gravity="center_horizontal"
                android:text="账号"
                android:textColor="@color/appDarkGrey"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/cut_line_gray" />

            <TextView
                android:id="@+id/xmw_xmt_title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/xmw_xmt3"
                android:gravity="center_horizontal"
                android:text="尊享"
                android:textColor="@color/appDarkGrey"
                android:textSize="10dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/cut_line_gray" />

            <RelativeLayout
                android:id="@+id/xmw_xmt_title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/xmw_xmt2"
                    android:gravity="center_horizontal"
                    android:text="切换账号"
                    android:textColor="@color/appDarkGrey"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/xmw_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/xmw_new_msg_tm"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/xm_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/xmw_ic_wel_xmt_logo"
        android:scaleType="centerInside" />

</FrameLayout>