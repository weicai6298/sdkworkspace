<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_reset_login_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" >

        <com.xmwsdk.view.XmwEditText
            android:id="@+id/find_reset_login_password"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/xmw_corner_white_gray"
            android:hint="请输入登录密码"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="3dp"
            android:textColor="@color/appBlack"
            android:textColorHint="@color/con_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" >

        <com.xmwsdk.view.XmwEditText
            android:id="@+id/new_reset_login_password"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/xmw_corner_white_gray"
            android:hint="请输入新的登录密码"
            android:inputType="text"
            android:maxLength="11"
            android:paddingLeft="3dp"
            android:textColor="@color/appBlack"
            android:textColorHint="@color/con_black"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reset_login_success_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/xmw_light_button2" >

        <TextView
            android:id="@+id/tv_reset_login_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/appBlack"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>