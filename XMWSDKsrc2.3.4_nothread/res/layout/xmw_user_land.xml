<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xmw_corner_white_gray"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.99"
        android:background="@drawable/xmw_user_center_corner"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/xmw_ic_tx_default"
            android:src="@drawable/xmw_header" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:text="名称"
            android:textColor="@color/appBlack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_phone_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手机号" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_phone_name"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="159****1245"
                    android:textColor="@color/appBlack" />
            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#DEDEDE" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_xmb_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="熊猫币" />

                <TextView
                    android:id="@+id/tv_xmb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_xmb_name"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="320"
                    android:textColor="@color/red_text" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/tv_change_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/xmw_corner_white_btn"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="更换手机号"
                android:textColor="@color/appBlack" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2" />

            <TextView
                android:id="@+id/tv_change_psw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="@drawable/xmw_corner_white_btn"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="修改密码"
                android:textColor="@color/appBlack" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.01"
        android:background="#DEDEDE" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/xmw_white_btn_corner_right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_gg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_gg"
                android:gravity="center"
                android:padding="10dp"
                android:text="公告"
                android:textColor="@color/appBlack" />

            <TextView
                android:id="@+id/tv_zx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_zx"
                android:gravity="center"
                android:padding="10dp"
                android:text="资讯"
                android:textColor="@color/appBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_lb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_gift"
                android:gravity="center"
                android:padding="10dp"
                android:text="礼包"
                android:textColor="@color/appBlack" />

            <TextView
                android:id="@+id/tv_zd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_pay"
                android:gravity="center"
                android:padding="10dp"
                android:text="账单"
                android:textColor="@color/appBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_xmw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_user_set"
                android:gravity="center"
                android:padding="10dp"
                android:text="设置"
                android:textColor="@color/appBlack" />

            <TextView
                android:id="@+id/tv_kf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xmw_white_btn_corner_right"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/xmw_ic_kf"
                android:gravity="center"
                android:padding="10dp"
                android:text="客服"
                android:textColor="@color/appBlack" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>