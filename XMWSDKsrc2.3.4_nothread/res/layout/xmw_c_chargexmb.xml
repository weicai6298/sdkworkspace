<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pandapay_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/xmw_corner_login_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/xmw_corner_title" >

            <TextView
                android:id="@+id/xmw_paymaintitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="充值熊猫币"
                android:textColor="@color/appBlack"
                android:textSize="18sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/pandapay_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/xmw_ic_back" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入金额:"
                android:textColor="@color/appBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/xmw_paypandanum"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/xmw_s_corner_white_gray"
                android:gravity="right"
                android:inputType="number"
                android:maxLength="7"
                android:paddingLeft="3dp"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/xmw_getgo"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/xmw_light_button"
            android:text="前往充值"
            android:textColor="@color/appBlack"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>