<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pay_record_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payRecordName"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/pay_color_919191"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/payRecordMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/pay_color_ff9642"
            android:textSize="@dimen/size_15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/payRecordNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_15dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:gravity="right"
        android:textColor="@color/pay_color_bbbbbb"
        android:textSize="@dimen/size_13sp" />

</LinearLayout>
