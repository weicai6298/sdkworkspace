<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/pay_coupon_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_15dp">

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_80dp"
            android:layout_marginLeft="@dimen/size_17dp"
            android:layout_weight="1"
            android:background="@mipmap/pay_coupon_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/size_17dp"
            android:paddingRight="@dimen/size_17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="ï¿¥"
                android:textColor="@color/pay_color_3095fb"
                android:textSize="@dimen/size_20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/payDCouponMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pay_color_3095fb"
                    android:textSize="@dimen/size_25sp" />

                <TextView
                    android:id="@+id/payDCouponSubheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pay_color_bbbbbb"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/payDCouponName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:textColor="@color/pay_color_3095fb"
                    android:textSize="@dimen/size_15sp" />

                <TextView
                    android:id="@+id/payDCouponTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="2"
                    android:textColor="@color/pay_color_bbbbbb"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/payDCouponIV"
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp" />
    </LinearLayout>
</LinearLayout>
