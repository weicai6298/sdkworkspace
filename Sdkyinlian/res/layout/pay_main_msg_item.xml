<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pay_color_ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/payMULILogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/size_10dp"
        android:background="@mipmap/pay_msg_item" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payMsgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="个人信息个人信息"
            android:textColor="@color/pay_color_333333"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/payMsgMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="三您的时间"
            android:textColor="@color/pay_color_bbbbbb"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/payMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="@dimen/size_130dp"
        android:text="2018.12.12"
        android:textColor="@color/pay_color_bbbbbb"
        android:textSize="@dimen/size_13sp" />

</LinearLayout>
