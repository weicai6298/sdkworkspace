<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_bg_bai_hui"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payDCardName"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_17dp"
            android:text="@string/newCardPay"
            android:textColor="@color/pay_color_3095fb"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/payDCardUnbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10dp"
            android:background="@drawable/pay_bgw_3095fb_circle"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_15dp"
            android:paddingRight="@dimen/size_15dp"
            android:visibility="gone"
            android:paddingTop="@dimen/size_5dp"
            android:text="@string/unbind"
            android:textColor="@color/pay_color_3095fb"
            android:textSize="@dimen/size_15sp" />

        <ImageView
            android:id="@+id/payDCardIVOne"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:background="@mipmap/pay_right_arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/payDCardIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="17dp"
            android:background="@mipmap/pay_right_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/pay_color_bbbbbb" />
</LinearLayout>
