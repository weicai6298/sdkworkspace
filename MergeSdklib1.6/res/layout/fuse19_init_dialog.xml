<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent">
	<FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:clickable="true"
	    android:orientation="vertical"
	     >
	
	    <LinearLayout
	        android:layout_width="282dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:background="@drawable/fuse19_img_login_et"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="48.0dip"
	            android:layout_gravity="bottom"
	            android:gravity="center"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:orientation="horizontal" >
	            <TextView
	            android:id="@+id/fuse19_title"
	            style="@style/fuse19_style_dialog_title"
	            android:text="温馨提示"/>
	        </LinearLayout>
	        
	
	        
	        
	 	   <LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="40dip"
	          android:gravity="center_vertical"
	          android:layout_marginLeft="20dip"
              android:layout_marginRight="20dip"
	          android:orientation="horizontal" >
	             <TextView 
	                 android:id="@+id/fuse19_msg"
	                 android:textSize="19dip"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:textColor="@color/fuse19_color_gray_light"
	                 android:text="ceshi"/>
	       </LinearLayout>
	         
	       <LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:gravity="center"
	          android:id="@+id/fuse19_double_btn"
	          android:layout_margin="20dip"
	          android:orientation="horizontal" >
		        <Button 
		            android:id="@+id/fuse19_btn_cancel"
		            android:layout_width="0dip"
		            android:layout_height="38.0dip"
		            android:textColor="@color/fuse19_color_white"
		            android:text="退出游戏"
		            android:textSize="16dip"
		            android:layout_marginRight="8dip"
		            android:layout_weight="1"
		            android:background="@drawable/fuse19_selector_btn_left"/>
		        <Button 
		            android:id="@+id/fuse19_btn_ok"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_height="38.0dip"
		            android:textColor="@color/fuse19_color_white"
		            android:text="立即更新"
		            android:textSize="16dip"
		            android:layout_marginLeft="8dip"
		            android:background="@drawable/fuse19_selector_btn_right"/>
		  </LinearLayout>
          <LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:gravity="center"
	          android:layout_marginBottom="20dip"
	          android:id="@+id/fuse19_single_btn"
	          android:layout_marginLeft="20dip"
	          android:visibility="gone"
              android:layout_marginRight="20dip"
	          android:orientation="horizontal" >
		        <Button 
		            android:id="@+id/fuse19_btn_oneok"
		            android:layout_width="0dip"
		            android:layout_weight="1"
		            android:layout_height="38.0dip"
		            android:textColor="@color/fuse19_color_white"
		            android:text="确认"
		            android:textSize="14dip"
		            android:background="@drawable/fuse19_selector_btn_right"/>
		   </LinearLayout>
	       
	    </LinearLayout>
		
	</FrameLayout>
</ScrollView>