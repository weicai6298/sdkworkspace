<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="#F5F5F5">
    
    <FrameLayout
	    android:layout_width="match_parent"
	    android:gravity="center_vertical"
	    android:layout_height="wrap_content">
    
	  	<LinearLayout
		    android:id="@+id/fuse19_pay_llTitle"
		    android:layout_width="match_parent"
		    android:layout_height="44dip"
		    android:background="#313944"
		    android:gravity="center"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/fuse19_pay_title"
		        android:padding="5dip"
		        android:textSize="20dip"
		        android:textColor="#ffffff"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	
		</LinearLayout> 
		 <LinearLayout 
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_gravity="center_vertical"
	        android:id="@+id/fuse19_pay_black">
		     <ImageView 
		            android:src="@drawable/fuse19_pay_title_back"
		            android:scaleType="fitXY" 
		         	android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
		     <TextView 
		         android:layout_width="wrap_content"
	       		 android:layout_height="wrap_content"
	       		 android:textColor="#FFFFFF"
	       		 android:textSize="16dip"
		         android:text="返回"/>
		 </LinearLayout>
	</FrameLayout>
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
	    <WebView
	        android:id="@+id/fuse19_pay_webView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" />
	    <ProgressBar 
	        android:id="@+id/fuse19_pay_progressBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:visibility="gone"/>
	</FrameLayout>

</LinearLayout>