<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ycx_img_down_bg"
        android:minHeight="155.0dip"
        android:minWidth="300.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ycx_tv_title"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:gravity="center"
                android:textColor="@color/ycx_color_black"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@+id/ycx_dialog_cutline"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_marginLeft="14.0dip"
                android:layout_marginRight="14.0dip"
                android:contentDescription="icon"
                android:scaleType="fitXY" 
                android:src="@color/ycx_color_orange"/>

            <TextView
                android:id="@+id/ycx_tv_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="14.0dip"
                android:layout_marginRight="14.0dip"
                android:layout_marginTop="10.0dip"
                android:maxWidth="225.0dip"
                android:textColor="#ff666666"
                android:textSize="16.0sp" />
            
            <LinearLayout
                android:id="@+id/ycx_ll_update_progress"
			  	android:layout_width="fill_parent"
			  	android:layout_height="wrap_content"
			  	android:paddingLeft="5dip"
			  	android:paddingRight="5dip"
			  	android:orientation="vertical"
			  	android:visibility="gone">  
			  	<ProgressBar
			  		android:id="@+id/ycx_pb"
			  		android:layout_width="fill_parent"
			  		android:layout_height="wrap_content"
			  		style="?android:attr/progressBarStyleHorizontal"/>
			  	<TextView 
			  	    android:id="@+id/ycx_pb_text"
			  		android:layout_width="wrap_content"
			  		android:layout_height="wrap_content"
			  		android:layout_gravity="right"
			  		android:textColor="@color/ycx_color_orange"/>
			</LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="22.0dip"
            android:contentDescription="icon"
            android:scaleType="fitXY"
            android:src="@drawable/ycx_img_split_h" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip" >

            <Button
                android:id="@+id/ycx_btn_left"
                android:layout_width="0.0dip"
                android:layout_height="45.0dip"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/ycx_down_btn_submit"
                android:textColor="@drawable/ycx_down_btn_color"
                android:textSize="18.0sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ycx_dialog_split_v"
                android:layout_width="1.0dip"
                android:layout_height="45.0dip"
                android:layout_gravity="center_horizontal"
                android:contentDescription="icon"
                android:scaleType="fitXY"
                android:src="@drawable/ycx_img_split_v"
                android:visibility="gone" />

            <Button
                android:id="@+id/ycx_btn_right"
                android:layout_width="0.0dip"
                android:layout_height="45.0dip"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/ycx_down_btn_submit"
                android:textColor="@drawable/ycx_down_btn_color"
                android:textSize="18.0sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>