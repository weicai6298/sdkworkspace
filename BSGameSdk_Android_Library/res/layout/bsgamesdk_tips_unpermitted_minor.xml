<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        style="?attr/bsgamesdk_info_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bsgamesdk_text_tip_unpermittedMinor" />

    <Button
        android:id="@+id/bsgamesdk_btn_tip_unpermittedMinor_comfirm"
        style="?attr/bsgamesdk_confirm_button_style"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bsgamesdk_text_common_comfirm" />
</LinearLayout>