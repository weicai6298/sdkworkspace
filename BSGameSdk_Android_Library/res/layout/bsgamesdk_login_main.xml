<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bsgamesdk_login_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:background="?attr/bsgamesdk_main_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.Login_RegActivity" 
    >

    <include 
        android:id="@+id/bsgamesdk_titleLayout"
        layout="@layout/bsgamesdk_title" 
         />

     <include 
        android:id="@+id/bsgamesdk_areaLayout"
        layout="@layout/bsgamesdk_area" 
        android:visibility="gone" 
         />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/bsgamesdk_transparent"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/bsgamesdk_oneClickLoginLayout"
            layout="@layout/bsgamesdk_one_click_login"
            android:visibility="gone" />

        <include
            android:id="@+id/bsgamesdk_loginLayout"
            layout="@layout/bsgamesdk_login"
            android:visibility="gone" />

        <include
            android:id="@+id/bsgamesdk_registerLayout"
            layout="@layout/bsgamesdk_register"
            android:visibility="gone" />

        <include
            android:id="@+id/bsgamesdk_activateLayout"
            layout="@layout/bsgamesdk_activate"
            android:visibility="gone" />

        <include
            android:id="@+id/bsgamesdk_couponLayout"
            layout="@layout/bsgamesdk_coupon"
            android:visibility="gone" />
        
		<include 
		    android:id="@+id/bsgamesdk_captchaLayout"
		    layout="@layout/bsgamesdk_captcha"
		    android:visibility="gone"
		    />
		
		<include 
		    android:id="@+id/bsgamesdk_unameRegisterLayout"
		    layout="@layout/bsgamesdk_uname_register"
		    android:visibility="gone"
		    />
	
		<include 
		    android:id="@+id/bsgamesdk_resetPwdLayout"
	        layout="@layout/bsgamesdk_reset_pwd" 
	        android:visibility="gone" 
         />
		<include
			android:id="@+id/bsgamesdk_authenticationLayout"
			layout="@layout/bsgamesdk_authentication"
			android:visibility="gone"
			/>
		<include
			android:id="@+id/bsgamesdk_pointLayout"
			layout="@layout/bsgamesdk_point"
			android:visibility="gone"
			/>
		<include
			android:id="@+id/bsgamesdk_tipPaidLayout"
			layout="@layout/bsgamesdk_tip_paid"
			android:visibility="gone"
			/>
        <include
            android:id="@+id/bsgamesdk_secureBindingLayout"
            layout="@layout/bsgamesdk_secure_binding"
            android:visibility="gone"
            />
		<include
			android:id="@+id/bsgamesdk_antiIndulgenceLayout"
			layout="@layout/bsgamesdk_antiindulgence_tip"
			android:visibility="gone"
			/>

    </LinearLayout>

</LinearLayout>