<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/bsgamesdk_id_reg_area_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:clickable="true"
         >

        <TextView
            android:id="@+id/bsgamesdk_id_reg_area_name"
            style="?attr/bsgamesdk_info_text_style"
            android:textColor="@color/bsgamesdk_text_reg_color"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/bsgamesdk_right_arrow" />
    </RelativeLayout>
</LinearLayout>
