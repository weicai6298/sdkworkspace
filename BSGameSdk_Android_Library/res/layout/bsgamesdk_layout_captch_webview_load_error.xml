<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/bsgamesdk_error_captch"
              android:visibility="gone"
              android:gravity="center_horizontal"
              android:background="@color/bsgamesdk_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@color/bsgamesdk_transparent">

        <ImageButton
            android:id="@+id/bsgamesdk_ib_error_back_captch"
            android:background="@null"
            android:src="@drawable/bsgamesdk_btn_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/bsgamesdk_logo"/>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                style="?attr/bsgamesdk_title_logo_style"
                android:contentDescription="@string/bsgamesdk_logo"/>

            <TextView
                android:id="@+id/bsgamesdk_web_title"
                style="?attr/bsgamesdk_title_text_style"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/bsgamesdk_ib_error_finish_captch"
            android:background="@null"
            android:src="@drawable/bsgamesdk_captch_finish"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/bsgamesdk_logo"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/bsgamesdk_iv_error_refresh_captch"
        android:layout_marginTop="16dp"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/bsgamesdk_error_web"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bsgamesdk_text_refresh_captch"
        android:textColor="#FF333333"
        android:textSize="12sp"
        />
    <Button
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/bagamesdk_b_error_back_captch"
        style="?attr/bsgamesdk_confirm_button_style"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="30dp"
        android:textSize="12sp"
        android:text="@string/bsgamesdk_text_back_captch"/>
</LinearLayout>