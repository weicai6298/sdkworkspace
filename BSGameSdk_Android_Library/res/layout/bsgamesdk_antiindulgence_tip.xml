<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="310dp"
                android:layout_height="250dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

    <ScrollView
        android:overScrollMode="never"
        android:layout_marginBottom="75dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bsgamesdk_anti_firsttext"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                style="?attr/bsgamesdk_info_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/bsgamesdk_btn_color"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/bsgamesdk_anti_secondtext"
                android:lineSpacingExtra="5dp"
                android:gravity="center"
                style="?attr/bsgamesdk_info_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/bsgamesdk_btn_color"
                android:textSize="14sp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bagamesdk_anti_submit"
        style="?attr/bsgamesdk_confirm_button_style"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="36dp"
        android:layout_marginBottom="18dp"
        android:text="@string/bsgamesdk_anti_bottom"
        android:textSize="12sp"/>

</RelativeLayout>