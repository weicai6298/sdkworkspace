<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.game.sdk.view.HuoFloatMenuView
        android:id="@+id/huo_sdk_ll_float_bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/huo_sdk_float_bg"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="50dp"
        >
    </com.game.sdk.view.HuoFloatMenuView>
    <RelativeLayout
        android:id="@+id/huo_sdk_rl_float"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/huo_sdk_iv_float"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/huo_sdk_fload"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/huo_sdk_msg_red"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:minWidth="12dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:background="@drawable/huo_sdk_msg_red_small_bg"
            android:gravity="center"
            android:textSize="10sp"
            android:visibility="gone"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>
