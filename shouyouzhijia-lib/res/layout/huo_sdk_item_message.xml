<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <View
            android:id="@+id/huo_sdk_view_read"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/huo_sdk_msg_red_small_bg"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/huo_sdk_tv_msg_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            />
        <TextView
            android:id="@+id/huo_sdk_tv_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-05-19"
            android:textSize="@dimen/huo_sdk_text_list_font"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/huo_sdk_tv_msg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="fdsafdsafdsafdsafdasfdsafd"
        android:ellipsize="end"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_marginTop="8dp"/>
</LinearLayout>