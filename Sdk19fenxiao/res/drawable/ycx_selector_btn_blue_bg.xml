<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/ycx_color_blue_pressed" />
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/ycx_color_lightgray" />
            <!-- 角度 -->
            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>

            <!-- 填充 -->
            <solid android:color="@color/ycx_color_blue_normal" />
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/ycx_color_lightblue" />
            <!-- 角度 -->
            <corners android:radius="5dp" />
        </shape></item>

</selector>