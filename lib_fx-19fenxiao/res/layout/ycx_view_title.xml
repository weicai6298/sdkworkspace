<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:id="@+id/ycx_fl_root"
    android:layout_height="wrap_content">
    
  	<LinearLayout
	    android:id="@+id/ycx_ll_title"
	    android:layout_width="match_parent"
	    android:layout_height="44dip"
	    android:background="@color/ycx_color_title_bg"
	    android:gravity="center"
	    android:orientation="horizontal" >
	
  	     <!-- Title-->  
<!-- 	<style name="TitleFontStyle">   -->
<!-- 	    <item name="android:padding">5.0dip</item> -->
<!--     	<item name="android:textSize">22sp</item>   -->
<!--     	<item name="android:textColor">#ffffff</item>   -->
<!-- 	</style> -->
	    <TextView
	        android:id="@+id/ycx_tv_title"
	        android:padding="5dp"
	        android:textSize="20dip"
	        android:textColor="@color/ycx_color_white"
	        android:text="@string/ycx_string_ycxtitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	</LinearLayout> 
	 <LinearLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/ycx_ll_black">
	     <ImageView 
	            android:src="@drawable/ycx_img_title_back"
	            android:scaleType="fitXY" 
	         	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	     <TextView 
	         android:layout_width="wrap_content"
       		 android:layout_height="wrap_content"
       		 android:textColor="@color/ycx_color_white"
       		 android:textSize="16dip"
	         android:text="@string/ycx_string_back"/>
	 </LinearLayout>

</FrameLayout>

