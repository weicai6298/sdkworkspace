<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sy233dialog_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp">


    <TextView
        android:id="@+id/tiptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:text="ddddddddd"
        android:textColor="@color/sy233black"
        android:textSize="17sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tiptitle"
        android:layout_marginBottom="16dp"
        android:text="dddddddddddddddddd"
        android:textColor="@color/sy233dimgray"
        android:textSize="14sp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tipTextView"
        android:background="@color/sy233hintextcolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipTextView"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="取消"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="16sp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/sy233hintextcolor"/>

        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="确定"
            android:textColor="@color/sy233colorPrimary"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>