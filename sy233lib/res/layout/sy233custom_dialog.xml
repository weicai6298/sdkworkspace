<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sy233dialog_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

    <TextView
        android:id="@+id/tiptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/sy233black"
        android:textSize="17sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tiptitle"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/sy233dimgray"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipTextView"
        android:layout_marginTop="10dp"
        android:gravity="bottom|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="6dp"
            android:text="取消"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:padding="6dp"
            android:text="确定"
            android:textColor="@color/sy233colorPrimary"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>