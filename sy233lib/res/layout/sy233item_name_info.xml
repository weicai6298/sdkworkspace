<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="道具名称"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="道具价格"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="折扣"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="应付金额"
            android:textColor="@color/sy233blacktextcolor"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sy233tv_item_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/sy233graytextcolor"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/sy233tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="00.00元"
                android:textColor="@color/sy233graytextcolor"
                android:textSize="15sp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@id/sy233tv_item_price"
                android:layout_alignRight="@id/sy233tv_item_price"
                android:layout_centerInParent="true"
                android:background="@color/sy233graytextcolor"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/sy233_tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="暂无"
            android:textColor="@color/sy233discount_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/sy233_tv_after_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="00.00元"
            android:textColor="@color/sy233graytextcolor"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>

