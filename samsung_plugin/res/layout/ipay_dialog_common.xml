<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ipay_dialog_protocol_bg"
              android:orientation="vertical"
              android:padding="@dimen/ipay_margin_10">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/ipay_margin_10"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_18"/>

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ipay_margin_5"
        android:layout_marginRight="@dimen/ipay_margin_10"
        android:layout_marginTop="@dimen/ipay_margin_15">

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/ipay_margin_5"
            android:text="@string/ipay_ensure"
            android:textStyle="bold"
            android:textColor="@color/ipay_color_value_17_97_ff"
            android:textSize="@dimen/ipay_text_size_18"/>

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ipay_margin_10"
            android:layout_toLeftOf="@+id/tv_dialog_confirm"
            android:padding="@dimen/ipay_margin_5"
            android:text="@string/ipay_cancel"
            android:textColor="@color/ipay_color_value_17_97_ff"
            android:textSize="@dimen/ipay_text_size_18"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>