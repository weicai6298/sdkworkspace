<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/samsung_notice_height_40"
                android:background="@drawable/samsung_notice_dialog_title_bg">

    <LinearLayout
        android:id="@+id/dialog_title_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/samsung_notice_height_24"
            android:layout_height="@dimen/samsung_notice_height_24"
            android:layout_marginLeft="@dimen/samsung_notice_margin_12"
            android:layout_marginRight="@dimen/samsung_notice_margin_12"
            android:src="@drawable/samsung_notice_dialog_title_close"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/samsung_notice_text_size_15"
        android:layout_centerInParent="true"
        android:text="@string/samsung_notice_dialog_title"
        android:textColor="@color/samsung_notice_color_value_1"/>

    <LinearLayout
        android:id="@+id/dialog_title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/samsung_notice_text_size_13"
            android:layout_centerInParent="true"
            android:text="@string/samsung_notice_more_activity"
            android:layout_marginRight="@dimen/samsung_notice_margin_10"
            android:textColor="@color/samsung_notice_color_value_1_3"/>

    </LinearLayout>


</RelativeLayout>