<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/ipay_margin_10"
              android:paddingRight="@dimen/ipay_margin_10"
              android:background="@drawable/ipay_dialog_protocol_bg"
              android:orientation="vertical"
              android:paddingBottom="@dimen/ipay_margin_20"
              android:paddingTop="@dimen/ipay_margin_34">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ipay_cancel_user_privacy_protocol"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_18"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_3"
        android:gravity="center"
        android:text="@string/ipay_exit_app"
        android:textColor="@color/ipay_color_value_9_2"
        android:textSize="@dimen/ipay_text_size_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ipay_margin_20"
        android:layout_marginTop="@dimen/ipay_margin_15">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:padding="@dimen/ipay_margin_5"
            android:text="@string/ipay_ensure"
            android:textColor="@color/ipay_protocol_pass_btn"
            android:textSize="@dimen/ipay_text_size_18"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/ipay_margin_30"
            android:layout_toLeftOf="@id/tv_confirm"
            android:padding="@dimen/ipay_margin_5"
            android:text="@string/ipay_cancel"
            android:textColor="@color/ipay_color_value_92_C5_FF"
            android:textSize="@dimen/ipay_text_size_18"/>
    </RelativeLayout>
</LinearLayout>