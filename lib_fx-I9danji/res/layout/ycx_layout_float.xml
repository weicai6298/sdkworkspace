<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dip"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#37353D"
    android:orientation="vertical" >
    
    
     <LinearLayout 
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView 
            android:src="@drawable/ycx_img_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"/>
       
    </LinearLayout>
    
    <LinearLayout 
       android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/ycx_ll_share"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/ycx_iv_qrcode"
            android:src="@drawable/ycx_selector_qrcode"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"/>
        <TextView style="@style/ycx_style_float_label"
            android:text="二维码"/>
    </LinearLayout>
    
    <LinearLayout 
       android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/ycx_ll_income"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/ycx_iv_income"
            android:src="@drawable/ycx_selector_income"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"/>
        <TextView style="@style/ycx_style_float_label"
            android:text="钱包"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/ycx_ll_service"
        android:layout_marginBottom="20dip"
        android:orientation="vertical">
        <ImageView 
             android:id="@+id/ycx_iv_service"
            android:src="@drawable/ycx_selector_service"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="fitXY"/>
        <TextView style="@style/ycx_style_float_label"
            android:text="客服"/>
    </LinearLayout>
    
    
   
</LinearLayout>