<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="YhSDK_NoTitle_Dialog" parent="@android:style/Theme.Dialog">
        <!-- activity无黑边 -->
        <item name="android:windowIsFloating">true</item>
        <!-- activity可滑动 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- activity透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- activity无标题 
        <item name="android:background">@android:color/black</item>-->
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- activity不变暗 -->
    </style>

    <style name="VerifyCodeStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#0099ff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/yhsdk_blue_line</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_color_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/yhsdk_ad_line</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>