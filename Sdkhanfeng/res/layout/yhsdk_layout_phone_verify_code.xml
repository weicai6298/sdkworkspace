<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
        >

    <include layout="@layout/yhsdk_layout_title"/>

    <com.hanfeng.guildsdk.view.VerifyCodeView
            android:id="@+id/vc_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43dp"/>

    <Button
            android:id="@+id/btn_get_vcode"
            android:layout_width="@dimen/win_width"
            android:layout_height="35dp"
            android:layout_marginTop="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/phone_vcode_desc_text"
            android:background="@drawable/yhsdk_btn_blue_bg"/>

</LinearLayout>