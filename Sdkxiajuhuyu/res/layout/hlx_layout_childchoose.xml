<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ChildChooseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="TITLE"
        android:textSize="15sp"
        android:textColor="#ff666666" />

    <TextView
        android:id="@+id/ChildChooseTextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChildChooseTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="DESC"
        android:textSize="15sp"
        android:textColor="#ff666666" />

    <LinearLayout
        android:id="@+id/ChildChooseBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ChildChooseTextDesc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/ChildChooseBtnLeft"
			style="@style/value_button_green_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="left" />
        
        <TextView
            android:id="@+id/ChildChooseBtnLine"
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/ChildChooseBtnRight"
			style="@style/value_button_green_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="right" />
    </LinearLayout>

    <Button
        android:id="@+id/ChildChooseBtnMiddle"
		style="@style/value_button_green_all"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ChildChooseBtnLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="middle" />

    <TextView
        android:id="@+id/ChildChooseTextTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="Tips"
        android:textColor="#ff666666"
        android:textSize="13sp" />

</RelativeLayout>