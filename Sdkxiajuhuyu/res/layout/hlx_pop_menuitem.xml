<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="76dp"
              android:orientation="vertical"
              android:background="@android:color/white" >

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:id="@+id/ic_dot"
               android:layout_marginLeft="10dp"
               android:src="@drawable/hlx_ic_greendot"/>


    <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@id/ic_dot"
                  android:layout_toLeftOf="@+id/ic_del"
                  android:layout_marginLeft="15dp"
                  android:orientation="vertical"
                  android:background="@android:color/white" >

    <TextView
            android:id="@+id/tv_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="1314999"
            android:paddingTop="10dip"
            android:paddingBottom="5dip"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/tv_game"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hlx_gray"
            android:text="最近登录游戏：青丘狐"
            android:paddingTop="5dip"
            android:paddingBottom="10dip"
            android:textSize="16sp" />

     </LinearLayout>


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:id="@id/ic_del"
               android:layout_marginRight="10dp"
               android:src="@drawable/hlx_ic_del"/>


</RelativeLayout>