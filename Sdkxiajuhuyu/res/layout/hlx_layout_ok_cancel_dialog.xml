<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:minHeight="156dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hlx_dialog_background"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  android:id="@+id/title_container"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/title"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

        <View
                android:id="@+id/title_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2dcdcdc"/>

    </LinearLayout>

    <TextView
            android:id="@+id/message"
            style="@style/DialogMsgText"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:visibility="gone"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:paddingTop="8dp"
                  android:orientation="horizontal"
                  android:id="@+id/custom_container"
                  android:minHeight="112dp"
                  android:paddingBottom="8dp"></LinearLayout>

    <View
            android:id="@+id/v1"
            android:layout_alignTop="@id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#f2dcdcdc"/>
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/btn_cancel"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/dialog_btn_text_fnt"
                android:textColor="@drawable/hlx_dialog_btn_color"
                android:layout_height="43dp"
                android:layout_width="124dp"
                android:layout_marginLeft="15dp"/>
        <View
                android:layout_width="1dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#f2dcdcdc"/>
        <TextView
                android:id="@+id/btn_ok"
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/dialog_btn_text_fnt"
                android:textColor="@drawable/hlx_dialog_btn_color"
                android:layout_height="43dp"
                android:layout_width="124dp"
                android:layout_marginRight="15dp"/>
    </LinearLayout>

</LinearLayout>
