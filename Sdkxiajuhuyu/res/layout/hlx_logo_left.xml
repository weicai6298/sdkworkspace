<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/second_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hlx_float_frame_left"
        android:visibility="visible"/>

    <ImageView
        android:paddingTop="4dp"
        android:id="@+id/iv_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/hlx_image_gift"
        android:visibility="visible"/>

    <ImageView
        android:paddingTop="4dp"
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/hlx_user_selector"
        android:visibility="visible"/>

    <ImageView
        android:paddingTop="4dp"
        android:id="@+id/iv_customer_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/hlx_image_customer_service"
        android:visibility="visible"/>

    <ImageView
        android:paddingTop="4dp"
        android:id="@+id/iv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/hlx_image_notice"
        android:visibility="visible"/>

</LinearLayout>