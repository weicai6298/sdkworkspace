<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ug_dialog_white_bg"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/ug_tv_u_coin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/text_lv1"
            android:textSize="@dimen/text_big"
            tools:text="您共有金币10000000个,本次可用100个" />


        <TextView
            android:id="@+id/ug_tv_u_coin_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="@color/text_lv2"
            android:textSize="11sp"
            tools:text="(1元=100金币)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/ug_edt_bg_corners">

                <TextView
                    android:id="@+id/ug_tv_min_coin"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="最小"
                    android:textColor="@color/text_lv1"
                    android:textSize="@dimen/text_big" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ug_edt_bg_corners"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ug_tv_u_coin_decrease"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ug_ic_decrease" />

                <View
                    android:layout_width="1px"
                    android:layout_height="35dp"
                    android:background="@color/divide_line" />

                <EditText
                    android:id="@+id/ug_tv_u_coin_number"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_lv1"
                    android:textSize="@dimen/text_big"
                    tools:text="10000" />

                <View
                    android:layout_width="1px"
                    android:layout_height="35dp"
                    android:background="@color/divide_line" />

                <ImageView
                    android:id="@+id/ug_tv_u_coin_add"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ug_ic_add" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ug_edt_bg_corners">

                <TextView
                    android:id="@+id/ug_tv_max_coin"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="最大"
                    android:textColor="@color/text_lv1"
                    android:textSize="@dimen/text_big" />
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="25dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/ug_bt_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@null"
                android:text="取消"
                android:textColor="@color/text_lv1"
                android:textSize="@dimen/text_big" />

            <View
                android:layout_width="1px"
                android:layout_height="40dp"
                android:background="@color/divide_line" />

            <Button
                android:id="@+id/ug_bt_go"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@null"
                android:text="确定"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_big" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>