<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/ug_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/common_bg"
        android:layout_height="73dp">

        <View
            android:background="@color/divide_line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1px"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ug_tv_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="title"
                android:textColor="@color/text_lv0"
                android:textSize="@dimen/text_bigger"/>

            <TextView
                android:id="@+id/ug_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxEms="1"
                android:ellipsize="end"
                android:text="有效时间：2017.01.01"
                android:textColor="@color/text_lv2"
                android:textSize="@dimen/text_normal"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/ug_tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_normal"
        android:visibility="gone"
        android:textColor="@color/text_lv2"
        android:padding="12dp"
        android:gravity="left|top"/>

    <WebView
        android:id="@+id/ug_hot_web"
        android:layout_marginTop="5dp"
        android:background="@color/common_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>