<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_login_forget"
        android:layout_width="306.67dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="306.67dp"
        android:visibility="visible">

<!--        <View
            android:id="@+id/view_whi1"
            android:layout_width="200dp"
            android:layout_height="0.1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

        <RelativeLayout
            android:id="@+id/rl_login_forget_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/yxf_bt_in_bg_whi">

            <RelativeLayout
                android:id="@+id/rl_in_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">

                <ImageView
                    android:id="@+id/iv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:padding="8dp"
                    android:src="@drawable/yxf_left_black_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="手机找回"
                    android:textColor="@color/yxf_sdk_gray_title"
                    android:textSize="17.33sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_in_title_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_in_title"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26.67dp"
                    android:layout_marginRight="26.67dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pwd_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="已向157****7463发送验证码，请注意查收"
                        android:textColor="@color/yxf_sdk_gray_result"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_login_frame"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_title"
                    android:layout_marginLeft="26.67dp"
                    android:layout_marginRight="26.67dp"
                    android:layout_marginTop="13.33dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_vetify"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/yxf_bt_in_edt_whi"
                            android:digits="1234567890"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingLeft="10.67dip"
                            android:singleLine="true"
                            android:textColor="@color/yxf_sdk_black"
                            android:textColorHint="@color/yxf_sdk_gray"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/bt_vetify"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/yxf_bt_in_green"
                            android:text="获取验证码"
                            android:textColor="@color/yxf_sdk_white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/yxf_bt_in_edt_whi"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:hint="请输入新密码"
                            android:maxLength="16"
                            android:paddingLeft="10.67dp"
                            android:paddingRight="10.67dp"
                            android:singleLine="true"
                            android:textColor="@color/yxf_sdk_black"
                            android:textColorHint="@color/yxf_sdk_gray"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_login_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_login_frame"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:paddingBottom="39dp"
                        android:layout_marginTop="19dp"
                        android:orientation="vertical">

<!--                        <View
                            android:id="@+id/login_line1"
                            android:layout_width="200dp"
                            android:layout_height="0.1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/yxf_lin_shape_yel"
                            android:visibility="gone"></View>-->

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/yxf_bt_in_gray"
                            android:text="确定"
                            android:textColor="@color/yxf_sdk_white"
                            android:textSize="14.67sp" />

<!--                        <View
                            android:id="@+id/login_line2"
                            android:layout_width="200dp"
                            android:layout_height="0.1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/yxf_lin_shape_yel"
                            android:visibility="gone"></View>-->

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_in_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_in_title"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/iv_pwd_email_unbind"
                    android:layout_width="162.33dp"
                    android:layout_height="110.67dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/yxf_phone_result_unbind" />

                <TextView
                    android:id="@+id/tv_pwd_email_unbind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_pwd_email_unbind"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="50dp"
                    android:layout_marginTop="33.87dp"
                    android:text="手机未绑定"
                    android:textColor="@color/yxf_sdk_blue"
                    android:textSize="14.67sp" />

            </RelativeLayout>

        </RelativeLayout>


<!--        <View
            android:layout_width="200dp"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rl_login_forget_in"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

    </RelativeLayout>

</RelativeLayout>