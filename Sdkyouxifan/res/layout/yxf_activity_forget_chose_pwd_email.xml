<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_login_forget"
        android:layout_width="306.67dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="306.67dp">

<!--        <View
            android:id="@+id/view_whi1"
            android:layout_width="200dp"
            android:layout_height="0.1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

        <RelativeLayout
            android:id="@+id/rl_login_forget_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/yxf_bt_in_bg_whi">

            <RelativeLayout
                android:id="@+id/rl_in_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">

                <ImageView
                    android:id="@+id/iv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:padding="8dp"
                    android:src="@drawable/yxf_left_black_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="邮箱找回"
                    android:textColor="@color/yxf_sdk_gray_title"
                    android:textSize="17.33sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_in_title_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_in_title"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_in1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="26.67dp"
                    android:layout_marginTop="62dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_pwd_email_name"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_in_title"
                        android:gravity="right"
                        android:text="游戏fan： "
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

                    <TextView
                        android:id="@+id/tv_pwd_email_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_in_title"
                        android:layout_gravity="left"
                        android:text="kylin"
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_in2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_in1"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="26.67dp"
                    android:layout_marginTop="13.33dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_pwd_email_add"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_in_title"
                        android:gravity="right"
                        android:text="邮      箱： "
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

                    <TextView
                        android:id="@+id/tv_pwd_email_add_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_in_title"
                        android:layout_gravity="left"
                        android:text="1196883692@qq.com"
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_login_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_in2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:paddingBottom="48dp"
                    android:layout_marginLeft="26.67dp"
                    android:layout_marginRight="26.67dp"
                    android:layout_marginTop="55dp"
                    android:orientation="vertical">

<!--                    <View
                        android:id="@+id/login_line1"
                        android:layout_width="200dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yxf_lin_shape_yel"
                        android:visibility="visible"></View>-->

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/yxf_lin_shape_red"
                        android:text="发送邮件"
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

<!--                    <View
                        android:id="@+id/login_line2"
                        android:layout_width="200dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yxf_lin_shape_yel"
                        android:visibility="visible"></View>-->


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_in_title_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_in_title"
                android:layout_marginLeft="26.67dp"
                android:layout_marginRight="26.67dp"
                android:layout_marginTop="30dp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_pwd_email_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已向11****3692@qq.com发送邮件，请注意查收"
                    android:textColor="@color/yxf_sdk_gray_result"
                    android:textSize="14.67sp" />

                <ImageView
                    android:id="@+id/iv_pwd_email_result"
                    android:layout_width="193.33dp"
                    android:layout_height="68.67dp"
                    android:layout_below="@+id/tv_pwd_email_result"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15.67dp"
                    android:src="@drawable/yxf_email_result_yes" />

                <LinearLayout
                    android:id="@+id/ll_login_layout_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_pwd_email_result"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:paddingBottom="38dp"
                    android:layout_marginTop="29.67dp"
                    android:orientation="vertical">

<!--                    <View
                        android:id="@+id/login_line1_result"
                        android:layout_width="200dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yxf_lin_shape_yel"
                        android:visibility="visible"></View>-->

                    <Button
                        android:id="@+id/btn_login_result"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/yxf_lin_shape_red"
                        android:text="确定"
                        android:textColor="@color/yxf_sdk_gray_title"
                        android:textSize="14.67sp" />

<!--                    <View
                        android:id="@+id/login_line2_result"
                        android:layout_width="200dp"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/yxf_lin_shape_yel"
                        android:visibility="visible"></View>-->


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_in_title_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_in_title"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_pwd_email_unbind"
                    android:layout_width="162.33dp"
                    android:layout_height="110.67dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/yxf_email_result_unbind" />

                <TextView
                    android:id="@+id/tv_pwd_email_unbind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_pwd_email_unbind"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29.87dp"
                    android:paddingBottom="53dp"
                    android:text="邮箱未绑定"
                    android:textColor="@color/yxf_sdk_blue"
                    android:textSize="14.67sp" />

            </RelativeLayout>

        </RelativeLayout>

<!--        <View
            android:layout_width="200dp"
            android:layout_height="0.33dp"
            android:layout_below="@+id/rl_login_forget_in"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yxf_lin_shape_whi"></View>-->

    </RelativeLayout>

</RelativeLayout>