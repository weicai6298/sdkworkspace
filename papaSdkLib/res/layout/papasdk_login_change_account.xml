<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp52">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp117"
        android:background="@drawable/papasdk_papalogin_editback"
        android:gravity="center_vertical">

        <AutoCompleteTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:dropDownSelector="#ffffff"
            android:enabled="false"
            android:gravity="center_vertical"
            android:hint="悟饭账号/手机账号/昵称"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/dp150"
            android:singleLine="true"
            android:textColor="#3c3c3c"
            android:textColorHint="#c4c4c4"
            android:textSize="@dimen/sp40" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="@dimen/dp57"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp36"
            android:src="@drawable/papasdk_papalogin_tourist_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp52"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp36"
            android:layout_toRightOf="@+id/userIcon"
            android:background="#c4c4c4"
            android:text="New Text" />

        <ImageView
            android:id="@+id/moreUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp37"
            android:src="@drawable/papasdk_more_user_butn"

            />

    </RelativeLayout>

