<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dp933"
            android:layout_height="@dimen/dp144"
            android:background="@drawable/papasdk_title_back"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleIcon"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp36"
                android:src="@drawable/papasdk_login_first_title" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/dp933"
            android:layout_height="wrap_content"
            android:background="@drawable/papasdk_main_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp50"
                android:layout_marginRight="@dimen/dp50"
                android:minHeight="@dimen/dp366"
                android:minWidth="@dimen/dp1000"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp57">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp79">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/txt_1"
                            android:layout_width="@dimen/dp147"
                            android:layout_height="@dimen/dp147"
                            android:drawablePadding="@dimen/dp20"
                            android:gravity="center"
                            android:src="@drawable/papasdk_login_first_icon_1"
                            android:text="快速游戏"
                            android:textColor="@color/grey_4"
                            android:textSize="@dimen/sp36" />


                        <ImageView
                            android:id="@+id/txt_2"
                            android:layout_width="@dimen/dp147"
                            android:layout_height="@dimen/dp147"
                            android:layout_marginLeft="25dp"
                            android:drawablePadding="@dimen/dp20"
                            android:gravity="center"
                            android:src="@drawable/papasdk_login_first_icon_2"
                            android:text="手机登录"
                            android:textColor="@color/grey_4"
                            android:textSize="@dimen/sp36" />


                        <ImageView
                            android:id="@+id/txt_3"
                            android:layout_width="@dimen/dp147"
                            android:layout_height="@dimen/dp147"
                            android:layout_marginLeft="25dp"
                            android:drawablePadding="@dimen/dp20"
                            android:gravity="center"
                            android:src="@drawable/papasdk_login_first_icon_3"
                            android:text="账号登录"
                            android:textColor="@color/grey_4"
                            android:textSize="@dimen/sp36" />

                        <ImageView
                            android:id="@+id/txt_4"
                            android:layout_width="@dimen/dp147"
                            android:layout_height="@dimen/dp147"
                            android:layout_marginLeft="25dp"
                            android:drawablePadding="@dimen/dp20"
                            android:src="@drawable/papasdk_login_first_icon_4"
                            android:gravity="center"
                            android:textColor="@color/grey_4"
                            android:textSize="@dimen/sp36"
                            android:visibility="gone" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_gravity="center|top"
                        android:layout_marginLeft="20dip"
                        android:src="@drawable/papasdk_no_register_icon" />
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="30dp"
                    android:background="@color/grey_1"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="选择以上任意方式登陆即同意"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/agreement"
                        android:paddingTop="13dp"
                        android:paddingBottom="13dp"
                        android:textColor="#00acfe"
                        android:text="《悟饭用户协议》"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>