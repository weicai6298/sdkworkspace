<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_show"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp127"
        android:background="#c80c0c0c"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
        android:id="@+id/adview"
        android:layout_width="@dimen/dp78"
        android:layout_height="@dimen/dp78"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp36"
        android:src="@drawable/papasdk_papa_notice_icon" />

        <TextView
            android:id="@+id/loginMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_marginRight="@dimen/dp20"
            android:layout_toRightOf="@+id/adview"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="为保证游戏数据安全请尽快完善账号"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/sp45" />


        <ImageView
            android:id="@+id/changeAccount"
            android:layout_width="@dimen/dp262"
            android:layout_height="@dimen/dp90"
            android:layout_alignBaseline="@+id/loginMessage"
            android:layout_alignBottom="@+id/loginMessage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp50"
            android:src="@drawable/papasdk_button_top"
            android:text="完善账号"
            android:textColor="@color/white"
            android:textSize="@dimen/sp45" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>