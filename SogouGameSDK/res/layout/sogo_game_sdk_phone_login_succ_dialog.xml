<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sogou_game_sdk_exit_dialog_bg"
    >

    <ImageView
        android:id="@+id/sogo_game_sdk_phone_login_close_btn"
        android:src="@drawable/sogo_game_sdk_phone_login_succ_close"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/sogo_game_sdk_phone_login_linear"
        android:layout_below="@+id/sogo_game_sdk_phone_login_close_btn"
        android:layout_marginTop="6.5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sogo_game_sdk_phone_login_succ_img"
            android:src="@drawable/sogo_game_sdk_phone_login_succ_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sogo_game_sdk_phone_login_succ_title"
            android:text="手机帐号登录成功！"
            android:textSize="16sp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/sogou_game_sdk_color_666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/sogo_game_sdk_phone_login_succ_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sogo_game_sdk_phone_login_linear"
        android:layout_marginTop="14dp"
        android:text="手机帐号的初始密码已经发送到您的手机号：13681144140上 请您查收"
        android:textSize="14sp"
        android:textColor="@color/sogou_game_sdk_color_666666"
        android:layout_width="194.5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sogo_game_sdk_phone_login_succ_mess"
        android:layout_below="@+id/sogo_game_sdk_phone_login_succ_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24.5dp"
        android:text="3s后自动关闭"
        android:textSize="14sp"
        android:textColor="@color/sogo_game_sdk_phone_login_succ_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>