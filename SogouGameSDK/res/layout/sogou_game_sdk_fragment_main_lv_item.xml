<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.sogou.wan.common.NetworkImageView
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true" >
        </com.sogou.wan.common.NetworkImageView>

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_game_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_lv_item_iv"
            android:text="诛仙3.青云"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_game_des_tv"
            android:layout_width="@dimen/headGameDes"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_main_dialog_lv_item_game_name_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_lv_item_iv"
            android:singleLine="true"
            android:text="新版”一念乾坤”10月25日公测，重磅玩诛仙"
            android:textColor="@color/sogou_game_sdk_color_888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_game_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_main_dialog_lv_item_game_des_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/sogou_game_sdk_main_dialog_lv_item_iv"
            android:text="角色扮演/253M"
            android:textColor="@color/sogou_game_sdk_color_888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_game_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/sogou_game_sdk_bt_red"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/sogou_game_sdk_color_ffffff"
            android:textSize="13sp" />

        <com.sogou.gamecenter.sdk.views.DownloadProgress
            android:id="@+id/sogou_game_sdk_main_dialog_lv_item_game_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/sogou_game_sdk_progress_horizontal"
            android:secondaryProgress="0"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/sogou_game_sdk_main_dialog_head_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:background="@color/sogou_game_sdk_color_dddddd" />

</LinearLayout>