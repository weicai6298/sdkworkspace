<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="25dp" >

        <com.sogou.wan.common.NetworkImageView
            android:id="@+id/sogou_game_sdk_main_dialog_head_recom_game_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" >
        </com.sogou.wan.common.NetworkImageView>

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_head_recom_game_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_recom_game_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/sogou_game_sdk_color_111111"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sogou_game_sdk_main_dialog_head_recom_game_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_recom_game_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/sogou_game_sdk_color_888888"
            android:textSize="10sp" />

        <Button
            android:id="@+id/sogou_game_sdk_main_dialog_head_recom_game_btn"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_recom_game_des_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/sogou_game_sdk_bt_red"
            android:text="下载"
            android:textColor="@color/sogou_game_sdk_color_ffffff"
            android:textSize="13sp" />

        <com.sogou.gamecenter.sdk.views.DownloadProgress
            android:id="@+id/sogou_game_sdk_main_dialog_head_recom_game_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:layout_below="@id/sogou_game_sdk_main_dialog_head_recom_game_des_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:focusable="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/sogou_game_sdk_progress_horizontal"
            android:secondaryProgress="0"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>