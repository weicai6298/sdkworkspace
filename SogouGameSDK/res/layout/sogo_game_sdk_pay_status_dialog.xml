<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/sogou_game_sdk_base_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sogo_game_sdk_pay_status_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/sogou_game_sdk_base_dialog_top_bg"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="充值中心"
        android:textColor="@color/sogou_game_sdk_white"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="120dp">

                <TextView
                    android:id="@+id/sogo_game_sdk_pay_status_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="交易处理中..."
                    android:textColor="@color/sogou_game_sdk_color_282828"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sogo_game_sdk_pay_status_msg"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:text="交易正在处理中，请稍后通过点击浮标-个人中心-充值记录查询结果。"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textColor="@color/sogou_game_sdk_color_555555"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>

            <Button
                android:id="@+id/sogo_game_sdk_pay_status_btn"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="30dp"
                android:text="返回游戏"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/sogou_game_sdk_bt_red"
                android:textColor="@color/gamecat_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>